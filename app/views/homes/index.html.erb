
<head>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js">
</script>
<script>
$(document).ready(function(){
  
    $("#foll").hide();
    $("#foll").show(1000);
  
});
</script>
</head>


<% i=0 %>

<% if current_user %>
  <center>Welcome <%= current_user.name %><br/><br/>
  
  


  <% count = 0 %>
  <% current_user.posts.each do |post| %>
    <% post.comments.each do |comment| %>
      <% if comment.status == false %>
        <% count+=1 %>
        <% i=1 %>
      <% end %>
    <% end %>
  <% end %>
  <% if i==1 %>
    <%= link_to "Notification #{ count }", comments_path %><br/><br/>
  <% end %>  
  <b id = "foll"> Follow's posts </b><br/>
  <% @users = current_user.followers %>
  <% @users.each do |user| %>
    <% @name = User.find(user.follower_id) %>
    <% @post=Post.where("user_id = ?", @name.id) %>
    <% if @post.present? %>
      <% @post.each do |pp| %>
        <%= link_to " #{ @name.name } ", pp, :class => "btn btn-mini btn-primary" %> 
        <%= @name.email %> <br/>
       <id= Bodyy> <%= pp.title %>&nbsp;&nbsp;&nbsp;&nbsp;
        <%= pp.body %><br/><br/>
        
      <% end %>
    <% end %>  
  <% end %>  
<% else %>
  <h1><center>Welcome Guest</h1>
  <center><%= link_to 'SignIn', new_user_session_path,  :class => "btn btn-primary" %>&nbsp;&nbsp;
  <%= link_to 'SignUp', new_user_registration_path, :class => "btn btn-primary" %><br />
<% end %>


