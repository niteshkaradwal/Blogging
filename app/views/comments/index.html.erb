<b> Name </b>&nbsp;&nbsp;
<b> Comment </b><br/>

<% @posts.each do |post| %>
  <% post.comments.each do |comment| %>
  
    <% if comment.status == false %>
      <b> Post :-- </b>
      <%= post.body %><br/>
      <%= comment.user.name %>
      :--
      <%= comment.content %>
     
    
      <%= link_to 'Accept', post_comment_path(post,comment), method: :put %>
      <%= link_to 'Reject', post_comment_path(post,comment), method: :delete %><br/>
    <% end %>
  <% end %>  
<% end %>
 


    
