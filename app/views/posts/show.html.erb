<p id="notice"><%= notice %></p>

<p>
  
	<b>User:</b>
	<%= @post.user.name %>
</p>	

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>
<% i=0 %>
 <% @post.likes.each do |like| %>
	 <% if like.user_id == current_user.id %>
     <% i=1 %>
     <%= link_to 'Unlike', post_like_path(@post, like), method: :delete %>  
     <% break %>              
   <% else %>
     <% i=0 %>
   <% end %>
<% end %>
 <% if i==0 %>
   <%= link_to 'Like', new_post_like_path(@post) %>
 <% end %>
<h2> Comments </h2>
<% @post.comments.each do|comment| %>
	
	<p>
		<%= comment.user.name %>
		:--  
	  <%= comment.content %>
	  :-- 
		<%= comment.post_date %>
	

	
	<% j=0 %>
	<% comment.likes.each do |likee| %>
		<% if likee.user_id == current_user.id %>
			<% j=1 %>
			<%= link_to 'Unlike', post_comment_likecomment_path(@post, comment, likee), method: :delete %>
			<% break %>
		<% else %>
		  <% j=0 %>
		<% end %>
	<% end %>
<% if j==0 %>
	<%= link_to 'Like', new_post_comment_likecomment_path(@post, comment) %>
<% end %>	
			
	
	
	<% if comment.commenter_id == current_user.id || @post.user.id == current_user.id %>
		
    <td><%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
		
  <% end %>
  </p>
<% end %>			


<h2> Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</div>
	<div class="field">
		<%= f.label :date %><br />
	  <%= Time.now.strftime("%d/%m/%Y") %>
	  <%= f.hidden_field(:post_date, :value => Time.now.strftime("%d/%m/%Y")) %>
	 </div>
	<div class="field">
		
		<%= f.hidden_field :post_id %>
	</div>	
	<div class="field">
		<%= f.label :status %><br />
		<%= radio_button_tag(:status, "yes") %>
		<%= label_tag(:status_yes, "yes") %>
		<%= radio_button_tag(:status, "No") %>
		<%= label_tag(:status_no, "No") %>
	</div>
	<div class="field">
	 
	  <%= f.hidden_field(:commenter_id, :value => current_user.id) %>
	</div> 	
	<div class="actions">
		<%= f.submit %>
	</div>	
<% end %>

