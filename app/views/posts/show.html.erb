
<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @post.user.name %>
</p>  

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<%= render :partial => "likes/like_button", :locals => { :post => @post } %>
 

<h2> Comments </h2>
  <div id="comments">
    <%= render :partial => "comments", :collection => @post.comments, :as => :comment %>
  </div>
  
<h2> Add a comment:</h2>

<%= render 'form_for_comment' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Home page', root_path %>


