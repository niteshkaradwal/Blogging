
<head>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js">
</script>
<script>
$(document).ready(function(){
  
    $("#tab").hide();
    $("#tab").show(1000);
  
});
</script>
<h1>Your Followers</h1>
<table id="tab" class = "table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% count = 0 %>
<% @users.each do |user| %>
  <% user.followers.each do |follower| %>
    <% if follower.follower_id == current_user.id %>
      <tr>
        <% count += 1 %>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
       </tr>
    <% end %>
  <% end %>
<% end %>   
Total followers <%= count %> 
</table>

<br />

<%= link_to 'Want to follow someone', new_follower_path, :class => "btn btn-mini btn-primary" %>
